{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["scripts/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.tsx"]
  }